{% extends '@admin/default_frame.twig' %}

{% set menus = ['postcarrier', 'postcarrier_monthly_report'] %}

{% block title %}{{ 'postcarrier.monthly_report.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'postcarrier.title'|trans }}{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.core.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.widget.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.mouse.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.sortable.min.js', 'admin') }}"></script>
{% endblock %}

{% block main %}
    <div class="c-outsideBlock__contents mb-5">
        {% if pagination %}
            <span class="font-weight-bold ml-2">{{ 'admin.postcarrier.history.search_count'|trans({'%count%':pagination.totalItemCount}) }}</span>
        {% endif %}
    </div>
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                {% if pagination and pagination.totalItemCount %}
                    <div class="row justify-content-between mb-2">
                        <div class="col-6"></div>

                        <div class="col-5 text-right">
                            {#Dropdown page count#}
                            <div class="d-inline-block mr-2">
                                <select class="custom-select" onchange="location = this.value;">
                                    {% for pageMax in pageMaxis %}
                                        <option {% if pageMax.name == page_count %} selected {% endif %}
                                                value="{{ path('plugin_post_carrier_monthly_report_page', {'page_no': 1, 'page_count': pageMax.name }) }}">
                                            {{ 'admin.common.count'|trans({ '%count%': pageMax.name }) }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="d-inline-block">
                                <div class="btn-group" role="group"></div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-body p-0">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="border-top-0 pt-2 pb-2 text-center">{{ 'postcarrier.monthly_report.th_send_month'|trans }}</th>
                                        <th class="border-top-0 pt-2 pb-2 text-right">{{ 'postcarrier.monthly_report.th_nsent'|trans }}</th>
                                        <th class="border-top-0 pt-2 pb-2 text-right">{{ 'postcarrier.monthly_report.th_cv_amount'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for Report in pagination %}
                                    <tr>
                                        <td class="align-middle text-center">{{ Report.month|slice(0,4) }}年{{ Report.month|slice(4,2) }}月</td>
                                        <td class="align-middle text-right">{{ Report.send|number_format }}件</td>
                                        <td class="align-middle text-right">{{ Report.sumConversion|number_format }}円</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="row justify-content-md-center mb-4">
                                {% if pagination.totalItemCount > 0 %}
                                    {% include "@admin/pager.twig" with { 'pages' : pagination.paginationData, 'routes' : 'plugin_post_carrier_monthly_report_page' } %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="card rounded border-0">
                        <div class="card-body p-4">
                            <div class="text-center text-muted">{{ 'admin.postcarrier.history.notice_no_data'|trans }}</div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
