{% extends '@admin/default_frame.twig' %}

{% set menus = ['postcarrier', 'postcarrier_history'] %}

{% block title %}{{ 'postcarrier.history.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'postcarrier.title'|trans }}{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th class="w-25">件名</th>
                            <td> {{ subject }}</td>
                        </tr>
                    </tbody>
                </table>
                <br>

                {# {{ dump(searchData) }} #}
                {% if searchData['b__event'] is defined and searchData.b__event is not null %}
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th class="w-25">ステップメール条件</th>
                            <td>{{ stepDisp }}</td>
                        </tr>
                    </tbody>
                </table>
                <br>
                {% endif %}

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th class="w-25">{{ 'postcarrier.common.group'|trans }}</th>
                            <td>
                                {% if search_data.Group is null %}
                                    ({{ 'postcarrier.history.condition.label_null'|trans }})
                                {% else %}
                                    {{ search_data.Group }}
                                {% endif %}
                            </td>
                        </tr>
                        {% if search_data.ignore_permissions %}
                        <tr>
                            <th class="w-25">{# {{ 'XXX'|trans }} #}</th>
                            <td>
                                {{ search_data.ignore_permissions|trans }}
                            </td>
                        </tr>
                        {% endif %}
                        <tr>
                            <th class="w-25">{{ 'postcarrier.common.email'|trans }}</th>
                            <td>
                                {% if search_data.email is null %}
                                    ({{ 'postcarrier.history.condition.label_null'|trans }})
                                {% else %}
                                    {{ search_data.email }}
                                {% endif %}

                            </td>
                        </tr>
                        <tr>
                            <th class="w-25">{{ 'admin.common.create_date'|trans }}</th>
                            <td>
                                {% if search_data.create_date_start is null %}
                                    ({{ 'postcarrier.history.condition.label_null'|trans }})
                                {% else %}
                                    {{ search_data.create_date_start|date("Y/m/d") }}
                                {% endif %}
                                ～
                                {% if search_data.create_date_end is null %}
                                    ({{ 'postcarrier.history.condition.label_null'|trans }})
                                {% else %}
                                    {{ search_data.create_date_end|date("Y/m/d") }}
                                {% endif %}
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="c-conversionArea">
        <div class="c-conversionArea__container">
            <div class="row justify-content-between align-items-center">
                <div class="col-6">
                    <div class="c-conversionArea__leftBlockItem">
                        <a class="c-baseLink" href="javascript:void(0)" onclick="window.history.back(-1);">
                            <i class="fa fa-backward" aria-hidden="true"></i><span>{{ 'postcarrier.history.preview.btn_back'|trans }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
