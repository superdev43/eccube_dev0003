{% extends '@admin/default_frame.twig' %}

{% set menus = ['postcarrier', 'postcarrier_history'] %}

{% block title %}{{ 'postcarrier.history.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'postcarrier.title'|trans }}{% endblock %}

{% block main %}
<div class="c-contentsArea__cols">
    <div class="c-contentsArea__primaryCol">
        <div class="c-primaryCol">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th class="w-25">{{ 'postcarrier.select.label_subject'|trans }}</th>
                        <td>{{ subject }}</td>
                    </tr>
                    <tr>
                        <th class="w-25">{{ '本文' }}</th> {# TODO: ラベル切替 #}
                        <td>{{ previewBody|raw }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="c-conversionArea">
    <div class="c-conversionArea__container">
        <div class="row justify-content-between align-items-center">
            <div class="col-6">
                <div class="c-conversionArea__leftBlockItem">
                    <a class="c-baseLink" href="javascript:void(0)" onclick="window.history.back(-1);">
                        <i class="fa fa-backward" aria-hidden="true"></i><span>{{ 'postcarrier.history.preview.btn_back'|trans }}</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
